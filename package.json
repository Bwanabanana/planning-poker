{
  "name": "planning-poker",
  "version": "1.0.0",
  "description": "A real-time collaborative Planning Poker application for agile story point estimation",
  "keywords": [
    "planning-poker",
    "agile",
    "scrum",
    "estimation",
    "story-points",
    "real-time",
    "collaboration",
    "websocket",
    "react",
    "nodejs"
  ],
  "homepage": "https://github.com/yourusername/planning-poker#readme",
  "bugs": {
    "url": "https://github.com/yourusername/planning-poker/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/planning-poker.git"
  },
  "license": "MIT",
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "contributors": [
    {
      "name": "Your Name",
      "email": "your.email@example.com"
    }
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:coverage": "npm run test:backend -- --coverage && npm run test:frontend -- --coverage",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules backend/dist frontend/dist",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "socket.io-client": "^4.8.1",
    "typescript": "^5.9.3"
  }
}
